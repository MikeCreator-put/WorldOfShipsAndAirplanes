<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller">
   <left>
      <VBox prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefWidth="200.0" text="List of Entities" />
            <TreeView fx:id="myTreeView" VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Region layoutX="432.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="newPlaneButton" mnemonicParsing="false" onAction="#NewPlaneButtonClicked" text="New Plane" />
                  <Region layoutX="170.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="newShipButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#NewShipButtonClicked" text="New Ship" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="viewMapButton" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" text="View Map" />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Region VBox.vgrow="ALWAYS" />
            <Label fx:id="informationsLabel" text="//Information about entity">
               <VBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </VBox.margin>
            </Label>
            <Region layoutX="10.0" layoutY="10.0" VBox.vgrow="ALWAYS" />
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="deleteEntityButton" mnemonicParsing="false" text="Delete Entity" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="callEmergencyButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Call Emergency" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="changeRouteButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Change Route" />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
